class Card{
public:
  enum CardType{
    ace = 1, two = 2, three = 3, four = 4, five = 5, six =6, seven = 7, eight = 8, nine = 9 , ten = 10, jack = 10, queen = 12, kind = 13
  };
  enum CardSuit{
    heart = 1, spade = 2, diamond = 3, clubs = 4
  };
  //what is the order  of things happening here ?
  Card(int type,int suit) : _suit(suit), _type(type){
    
  };
  int type() const{
    return _type;
  };
  int suit() const{
    return _suit;
  };
  string prettyPrint() const{
    return "suit: " + getSuit() + ", type: " + iToS(_type);
  };
  string getSuit() const{
    switch(_suit){
    case 1:
      return "Hearts";
    case 2:
      return "Spades";
    case 3:
      return "Diamond";
    case 4:
      return "Clubs";
    default:
      cout << "Unknown suit type : " << _suit << endl;
      throw "Unkown suit type";
    }
  };
private:
  const int _type;
  const int _suit;
};
