class BJPlayer: public Player{
public:
  BJPlayer(int id, string name): _id(id), Player(name){
  };
  int id() const{
    return _id;
  };
  bool isBust(){
    if(score() > 21)
      return true;
    else
      return false;
  };
  int score(){
    vector<Card *>::iterator it;
    int score = 0;
    for(it = cards.begin(); cards.end() != it; it++){
      if((*it)->type() > 10){
	score += 10;
      }
      else{
	score += (*it)->type();
      };
    };
    return score;
  };
private:
  int _finalScore;
  int _id;
};

class BlackJackDealer : public BJPlayer{
